####################################  MAINSCREEN
<Logscreen>:
    name:'log'
    Image:
        source:'images/orion.png'
        #center_x:.5
        center_y:250
    Image:
        source:'images/log.png'
        #center_x:0
       # center_y:115
        pos_hint: {'right':0.8, 'top':1.105}

    TextInput:
        id: user
        text:'User name'
        size_hint:(.3,.05)
        center_y:420
        center_x:370
        multiline:False
        
    TextInput:
        id: passw
        text:'Password'
        password:True
        size_hint:(.3,.05)
        center_y:380
        center_x:370
        multiline:False
    RoundedButton:
        text:'LOGIN'
        
        size_hint: .2,.05
               # background_color: [51, 102, 255, .5]
        pos_hint:{'center_x':0.63,'center_y':0.5}
        on_release:
            app.root.current='main' #if passw.text == '1234' and user.text == 'boutkhil' else Factory.Mypop().open()
            root.manager.transition.direction='up'
    Label:
        text:'Engineering'
        pos_hint:{'center_x':0.63,'center_y':0.82}

<Mainscreen>:
    name:'main'
    
    Image:
        source:'images/orion.png'
        
    Label:
        text:'Engineering'
        pos_hint:{'center_x':0.63,'center_y':0.48}

    ActionBar:
        pos_hint:{'top':1}
        background_color: [200,99,169,.5]
        ActionView:
            ActionPrevious:

                title:'LOGOUT'
               # with_previous: False
                app_icon: 'téléchargement (2).png'
                on_release:
                    app.root.current='log'
                    root.manager.transition.direction='down'

              
                        
            ActionGroup:
                text: 'Machines' 
                ActionButton:
                    text:'Fabtech'
                    background_color: [51, 102, 255, .5]
                    on_release:
                        app.root.current='fabtech'
                        root.manager.transition.direction='right'
                ActionButton:
                    text:'GEA'
                    background_color: [51, 102, 255, .5]
                    on_release:
                        app.root.current='Gea'
                        root.manager.transition.direction='right'
                ActionButton:
                    text:'Glatt'
                    background_color: [51, 102, 255, .5]
                    on_release:
                        app.root.current='Glatt'
                        root.manager.transition.direction='right'
                ActionButton:
                    text:'Harro'
                    background_color: [51, 102, 255, .5]
                    on_release:
                        app.root.current='Harro'
                        root.manager.transition.direction='right'
                ActionButton:
                    text:'Last'
                    background_color: [51, 102, 255, .5]
                    on_release:
                        app.root.current='Last'
                        root.manager.transition.direction='right'
                ActionButton:
                    text:'Honga'
                    background_color: [51, 102, 255, .5]
                    on_release:
                        app.root.current='Honga'
                        root.manager.transition.direction='right'


