#:import Factory kivy.factory.Factory
#:import App kivy.app
<Mypop@Popup>
    auto_dismiss: False
    size_hint:0.6,0.3
    pos_hint:{'x':0.2,'top':0.9}
    title:'Error'
    BoxLayout:
        orientation:'vertical'
        size:root.width,root.height
        Label:
            text:'Wrong User name or Password'
            font_size:15
        Button:
            text:'Close'
            font_size:12
            size_hint:0.2,0.2
            pos_hint:{'x':0.38,'top':0.9}

            on_release:root.dismiss()
<Mypop1@Popup>
    auto_dismiss: False
    size_hint:0.6,0.3
    pos_hint:{'x':0.2,'top':0.9}
    title:''
    BoxLayout:
        orientation:'vertical'
        size:root.width,root.height
        Label:
            text:'Do you really want to logout'
            font_size:15
        Button:
            text:'NO'
            font_size:12
            size_hint:0.2,0.2
            pos_hint:{'x':0.38,'top':0.9}

            on_release:root.dismiss()
        Button:
            text:'Yes'
            font_size:12
            size_hint:0.2,0.2
            pos_hint:{'x':0.38,'top':0.9}

            
